<%= stylesheet_link_tag 'forms.css' %>

<div class="form_container"
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form">
  <h2 class="subtitle">Welcome Back!</h2>

  <div class="input-container ic1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", type:"text", placeholder:"Email", id:"firstname" %>
  </div>

  <div class="input-container ic2">
    <%= f.password_field :password, autocomplete: "current-password", class:"input", id:"lastname", placeholder:"Password" %>
  </div>

<br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <hr>
  <div>
    <%= f.submit "Login", class:"submit" %>
  </div>
  <br>
<% end %>
<%= render "devise/shared/links", class:"devise_links" %>
</div>
