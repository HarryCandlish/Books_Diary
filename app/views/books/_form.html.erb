<%= stylesheet_link_tag 'forms.css' %>
<div id="form_container">
<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <label>Title</label>
    <% form.label :title %>
    <%= form.text_field :title, class:"form-control"%>
  </div>
  
  <div class="field form-group">
  <label>Author</label>
  <%= form.text_field :author, class:"form-control", placeholder:"Author" %>
  </div>

  <div class="field form-group">
  <label>Description</label>
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>

  <div class="field form-group">
  <label>Read</label>
  <br>
    <%= form.check_box :read, placeholder:"Read" %>
    <hr>
  </div>
  <div class="field form-group">
  <label>Pages</label>
    <%= form.text_field :pages, class:"form-control", placeholder:"Pages" %>

  </div>
  <div class="field form-group">
  <label>Cover</label>
  <%= form.file_field :image, class:"form-control", placeholder:"Images" %>
</div>


<div class="field form-group">
    
<%= form.number_field :user_id, id: :book_user_id, class:"form-control", value: current_user.id, type: :hidden %>
</div>

<div class="field form-group">
  <label>Date Started</label>
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>
  <div class="field form-group">
  <label>Date Ended</label>
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>



 
<br/>
  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>

  </div>
<% end %>
