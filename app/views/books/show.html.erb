<div class="card">
  <h1 class="display-4">
    <%= @book.title %>
    <%= @book.author %>
  </h1>
  <p class="lead">
    <%= @book.description %>  | 
    <%= @book.pages %>  |  
    <div style="width: 200px: height:auto">
    <%= image_tag(@book.image, style:'width:100%') %>
    </div>

  </p>
  <br/>
  
  <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-secondary" %>
  <%= button_to 'Delete', @book, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
  <%= link_to 'Back', books_path, class:"btn btn-dark" %>
</div>