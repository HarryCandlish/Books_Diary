<%= stylesheet_link_tag 'show.css' %>
<body class="body">
<div id="container">
  <div class="product-details">
  <h1 class="book_title">
    <%= @book.title %>
    </h1>
    <hr>
    <h1 class="book_author">
    <%= @book.author %>
    </h1>
  <p class="information">
    <%= @book.description %>  | 
    <%= @book.pages %>  |  
    </p>
    <%= link_to 'Edit', edit_book_path(@book), class:"links_crud"%> |
    <%= link_to 'Delete', @book, :method => :delete, class:"links_crud" %> |
    <%= link_to 'Back', books_path, class:"links_crud" %> |
    </div>
    <div class="product-image">
    <%= image_tag(@book.image, class:"product-image") %>
  <br/>
  
</div>
</div>
</body>
